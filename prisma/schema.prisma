// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING") // Add this for Vercel
}

model Case {
  id            String      @id @default(uuid())
  
  // Client Details (Simplified for MVP - No Login required yet)
  clientEmail   String?     // We will capture this in the form later
  
  // Incident Details
  assetType     String      
  amountLost    String      
  transactionTx String?     
  scammerAddress String?    
  incidentDate  DateTime    @default(now()) // Default to now if not provided
  description   String?     
  
  // Tracking Status
  status        String      @default("SUBMITTED") 
  
  // Internal Notes 
  notes         String?     // Simple text notes for now
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}